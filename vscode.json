{
  "editor.fontSize": 15,
  "editor.mouseWheelZoom": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  "workbench.activityBar.visible": false,
  "editor.minimap.enabled": false,

  "workbench.colorCustomizations": {
    "editor.background": "#262626",
    "statusBar.background": "#009102",
    "activityBar.foreground": "#f8f8f2",

    "editorCursor.foreground": "#55aa00",
    "editorCursor.background": "#272822"
  },

  //"editor.cursorStyle": "block",

  "editor.bracketPairColorization.enabled": false,

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
        "foreground": "#949494"
      }
      },
      {
        "name": "Function paramenter",
        "scope": "variable.parameter",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },
      {
        "name": "Function name",
        "scope": "entity.name.function",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },
      {
        "name": "Variable",
        "scope": "variable",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },
      {
        "name": "Keyword",
        "scope": "keyword.control",
        "settings": {
          "foreground": "#000"
        }
      },
      {
        "name": "String",
        "scope": "string",
        "settings": {
          "foreground": "#E6DB74"
        }
      },
      {
        "name": "Number",
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#AE81FF"
        }
      },
      {
        "scope": "constant.language",
        "settings": {
          "foreground": "#ffa0a0"
        }
      },
      {
        "name": "Storage type",
        "scope": ["type", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#00db5c"
        }
      },
      {
        "scope": "keyword.other.unit",
        "settings": {
          "foreground": "#AE81FF"
        }
      },
      {
        "scope": "keyword.control",
        "settings": {
          "foreground": "#ffdb4c"
        }
      },
      {
        "scope": "entity.name.function.preprocessor",
          "settings": {
          "foreground": "#f0f0f0"
        }
      },

      {
        "scope": "entity.name.type.cpp",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },

      // C++ highlight
      {
        "scope": ["keyword.control.directive.include.cpp", "keyword.control.directive.define.cpp"],
        "settings": {
          "foreground": "#ff7c8b"
        }
      },

      {
        "scope": ["storage.modifier.reference.cpp"],
        "settings": {
          "foreground": "#f0f0f0"
        }
      },

      // C highlight
      {
        "scope": "storage.type.asm.c",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },

      {
        "scope": "keyword.control.directive",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },

      {
        "scope": "entity.name.type.c",
        "settings": {
          "foreground": "#f0f0f0"
        }
      },

      {
        "scope": "meta.preprocessor",
        "settings": {
          "foreground": "#f0f0f0"
        }
      }

    ]
  },
  "window.zoomLevel": 1
}
